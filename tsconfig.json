// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["ES2020","DOM"],
    "jsx": "react-jsx",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": { "src/*": ["src/*"] }
  },
    "include": [
    "src/**/*",
    "lib/**/*",
    "api/**/*"
  ],
  "exclude": ["node_modules"]
}
