{
  "version": 2,
  "builds": [
    {
      // En lugar de package.json, apuntas al config de Vite
      "src": "vite.config.js",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.ts" },
    { "src": "/(.*)",       "dest": "/index.html" }
  ]
}
